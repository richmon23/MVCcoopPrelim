            <input class="form-control" type="text" name="Occupation"autocomplete="off">
             @Html.ValidationMessageFor(model => model.Occupation)
        </div>
        
        <div class="btn-cta">
            <input type="submit" class="btn btn-info" value="Submit">
        </div>
    </form>
    <script>
function calculateAge() {
    var dob = document.getElementById('dob').value;
    var dobDate = new Date(dob);
    var today = new Date();
    var age = today.getFullYear() - dobDate.getFullYear();
    var month = today.getMonth() - dobDate.getMonth();
    if (month < 0 || (month === 0 && today.getDate() < dobDate.getDate())) {
        age--;
    }
    document.getElementById('age').value = age;
}
</script>
</body>