@model RetizaCoopPrelim.Entities.ClientInfo
@using RetizaCoopPrelim.Entities


<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    .field-validation-error {
        color: red;
    }
    form {
        width: 50%;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    label {
        display: flex;
        justify-content: center;
        margin-bottom: 10px;
        font-weight: 400;
    }

    input[type="submit"] {
        width: auto;
        padding: 10px 20px;
        color: #040404;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
        color: white;
    }

    form {
        background: rgba(245, 243, 243, 0.32);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(3.1px);
        -webkit-backdrop-filter: blur(3.1px);
        border: 1px solid rgba(255, 255, 255, 1);
    }

    h1 {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn-cta {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
<body>
      <!-- Your script goes here -->
    <script>
        function calculateAge() {
            var dob = document.getElementById('dob').value;
            var dobDate = new Date(dob);
            var today = new Date();
            var age = today.getFullYear() - dobDate.getFullYear();
            var month = today.getMonth() - dobDate.getMonth();
            if (month < 0 || (month === 0 && today.getDate() < dobDate.getDate())) {
                age--;
            }
            document.getElementById('age').value = age;
        }
    </script>
</body>


<body>

    <h1 style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">
        Client Info
    </h1>

    <form action="create" method="post">
